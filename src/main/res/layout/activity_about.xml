<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/MyToolbar1"
        android:layout_width="match_parent"

        android:background="@color/color_primary"
        android:textAlignment="center"
        android:layout_height="?attr/actionBarSize"
        android:elevation="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:nestedScrollingEnabled="false" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">






        <LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout1" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:weightSum="1" android:layout_gravity="center_vertical"
            android:nestedScrollingEnabled="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center"


                android:textColor="#585656" />







            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about_text_view"
                android:textStyle="normal"
                android:textSize="30dp"
                android:text="WhatsRooting"
                android:layout_gravity="center"
                android:textColor="#585656" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about"

                android:textStyle="normal"
                android:textSize="20dp"
                android:text="Version:1.0.GSL"
                android:layout_gravity="center"
                android:textColor="#585656" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about1"

                android:textStyle="normal"
                android:textSize="20dp"
                android:text="Author:CodeBreaker"
                android:layout_gravity="center"
                android:textColor="#585656" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about2"

                android:textStyle="normal"
                android:textSize="15dp"
                android:text="Email: zeroerror.444@gmail.com"
                android:autoLink="email"
                android:clickable="true"
                android:layout_gravity="center"
                android:textColor="#585656" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about3"

                android:textStyle="normal"
                android:textSize="15dp"
                android:text="Page: facebook.com/zer0error"
                android:autoLink="web"
                android:clickable="true"
                android:layout_gravity="center"
                android:textColor="#585656" />

        </LinearLayout>

</ScrollView>
        </LinearLayout>




