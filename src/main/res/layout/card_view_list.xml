<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_columnSpan="2"
    android:layout_column="2"
    android:layout_height="match_parent"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        android:layout_gravity="center"
        android:gravity="center"

        card_view:cardElevation="5dp"

        android:id="@+id/card_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first"
            android:weightSum="2"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:id="@+id/main_image"
                android:src="@drawable/rooting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_image"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="#5d5c5c"
                android:textStyle="bold"

                android:id="@+id/main_name"
                android:layout_marginLeft="5dp"
                android:text="What'sRooting?"

                style="@android:style/Animation.Translucent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:id="@+id/main_description"
                android:layout_below="@+id/main_name"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="Learn Basic Information About Rooting"
                android:textSize="15dp"

                android:textColor="#7f7e7e" />




        </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>