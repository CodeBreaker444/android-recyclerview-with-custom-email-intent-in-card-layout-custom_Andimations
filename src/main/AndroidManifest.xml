<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codebreaker.gsl.whatsrooting" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".whatsrooting"
            android:parentActivityName="codebreaker.gsl.whatsrooting.MainActivity"
            android:theme="@style/AppTheme1" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="codebreaker.gsl.whatsrooting.whatsrooting" />

        <activity android:name=".Question" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.Question" />
        </activity>
        <activity
            android:name=".Developer"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.Developer" />
        </activity>
        <activity
            android:name=".howtoroot"
            android:parentActivityName="codebreaker.gsl.whatsrooting.MainActivity"
            android:theme="@style/AppTheme2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.howtoroot" />
        </activity>
        <activity
            android:name=".Benefits"
            android:parentActivityName="codebreaker.gsl.whatsrooting.MainActivity"
            android:theme="@style/AppTheme3" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.Benefits" />
        </activity>
        <activity
            android:name=".Disadvantages"
            android:parentActivityName="codebreaker.gsl.whatsrooting.MainActivity"
            android:theme="@style/AppTheme4" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.Disadvantages" />
        </activity>
        <activity
            android:name=".Flashing"
            android:parentActivityName="codebreaker.gsl.whatsrooting.MainActivity"
            android:theme="@style/AppTheme5" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.Flashing" />
        </activity>
        <activity
            android:name=".Custom"
            android:parentActivityName="codebreaker.gsl.whatsrooting.MainActivity"
            android:theme="@style/AppTheme6" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.Custom" />
        </activity>
        <activity android:name=".About" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="codebreaker.gsl.whatsrooting.About" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
